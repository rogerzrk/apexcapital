<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Sur name</th>
      <th>First name</th>
      <th>Other name</th>
      <th>Gender</th>
      <th>Relationship status</th>
      <th>Number dependents</th>
      <th>Nationality</th>
      <th>Profession</th>
      <th>Nin</th>
      <th>Phone number1</th>
      <th>Phone number2</th>
      <th>R village</th>
      <th>R parish</th>
      <th>R county</th>
      <th>R district</th>
      <th>Work place</th>
      <th>Work location</th>
      <th>Kin surname</th>
      <th>Kin firstname</th>
      <th>Kin relation</th>
      <th>Kin phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.sur_name %></td>
        <td><%= client.first_name %></td>
        <td><%= client.other_name %></td>
        <td><%= client.gender %></td>
        <td><%= client.relationship_status %></td>
        <td><%= client.number_dependents %></td>
        <td><%= client.nationality %></td>
        <td><%= client.profession %></td>
        <td><%= client.nin %></td>
        <td><%= client.phone_number1 %></td>
        <td><%= client.phone_number2 %></td>
        <td><%= client.r_village %></td>
        <td><%= client.r_parish %></td>
        <td><%= client.r_county %></td>
        <td><%= client.r_district %></td>
        <td><%= client.work_place %></td>
        <td><%= client.work_location %></td>
        <td><%= client.kin_surname %></td>
        <td><%= client.kin_firstname %></td>
        <td><%= client.kin_relation %></td>
        <td><%= client.kin_phone %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

