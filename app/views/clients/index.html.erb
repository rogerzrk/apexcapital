<div class="p-3" style="background-color:#dee1e3;">
  <div class="p-4 bg-light">
    <h1>Clients</h1>

    <table class="table table-striped table-hover table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Surname</th>
          <th>First name</th>
          <th>Other name</th>
          <th>Phone number1</th>
          <th>Phone number2</th>
          <th>Account Number</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.sur_name %></td>
            <td><%= client.first_name %></td>
            <td><%= client.other_name %></td>
            <td><%= client.phone_number1 %></td>
            <td><%= client.phone_number2 %></td>
            <td><%= client.id + (@year*1000000) %></td>
            <td><%= link_to 'Show', client %></td>
            <td><%= link_to 'Edit', edit_client_path(client) %></td>
            <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Client', new_client_path, class:"btn btn-secondary" %>

    </div>
</div>
