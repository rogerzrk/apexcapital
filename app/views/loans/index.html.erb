<div class="p-3" style="background-color:#dee1e3;">
  
   <div class="p-4 bg-light">
    <h1>Loans</h1>

    <table class="table table-striped table-hover table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Doc ref</th>
          <th>Loan amount</th>
          <th>Interest rate</th>
          <th>Charges</th>
          <th>Loan period</th>
          <th>Payment terms</th>
          <th>Loan security</th>
          <th>Security valuation</th>
          <th>Loan guarantor</th>
          <th>Guarantor tel</th>
          <th>Guarantor relation</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @loans.each do |loan| %>
          <tr>
            <td><%= loan.doc_ref %></td>
            <td><%= loan.loan_amount %></td>
            <td><%= loan.interest_rate %></td>
            <td><%= loan.charges %></td>
            <td><%= loan.loan_period %></td>
            <td><%= loan.payment_terms %></td>
            <td><%= loan.loan_security %></td>
            <td><%= loan.security_valuation %></td>
            <td><%= loan.loan_guarantor %></td>
            <td><%= loan.guarantor_tel %></td>
            <td><%= loan.guarantor_relation %></td>
            <td><%= link_to 'Show', loan %></td>
            <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
            <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Loan', new_loan_path, class:"btn btn-secondary" %>
  </div>
</div>

